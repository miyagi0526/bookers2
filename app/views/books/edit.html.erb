<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <div><label for="inputTitle">Title</label></div>
  <div><%= f.text_field :title, autofocus: true, id:"inputTitle" %></div>
  <div><label for="inputOption">Option</label></div>
  <div><%= f.text_field :body, id:"inputOption" %></div>
  <div><%= f.submit "Update Book" %></div>
<% end %>

<%= link_to "Show", book_path(@book.user_id) %> | <%= link_to "Back", books_path %>
